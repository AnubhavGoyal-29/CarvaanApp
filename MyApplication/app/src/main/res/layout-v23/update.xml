<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#614A87">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/closesell"
            android:src="@drawable/cross"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Update"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:lines="1"
        android:textColor="#FFFFFF"
        tools:autoSizeTextType="uniform"
        android:fontFamily="@font/abril_fatface"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="Please update your app to latest versions to use best features"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Now"
        android:textColor="#ffffff"
        android:background="#055c9d"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/abril_fatface"/>
</LinearLayout>