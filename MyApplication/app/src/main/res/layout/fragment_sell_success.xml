<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FF971B1B">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like a Boss!"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:lines="1"
        android:textColor="#FFFFFF"
        tools:autoSizeTextType="uniform"
        android:fontFamily="@font/abril_fatface"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseline_thumb_up_24"/>
    <TextView
        android:id="@+id/sellsuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 29 shares"
        android:textColor="#ffd08a"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/abril_fatface"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="You have successfully invested your credits in Random Bullshit Pvt. Ltd."
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>
</LinearLayout>