<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:id="@+id/textFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:padding="5dp"

                    android:text="Title :"
                    android:textColor="#FF533D78"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:autoSizeTextType="uniform"></TextView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="7dp"

                    android:text="gugirgfi hfufwsyd fdufwufdufsuyfwuyf sfduyfsyudfq"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:autoSizeTextType="uniform"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:padding="5dp"

                    android:text="Description :"
                    android:textColor="#FF533D78"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:autoSizeTextType="uniform"></TextView>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="7dp"

                    android:text="gugirgfi hfufwsyd fdufwufdufsuyfwuyf sfduyfsyudfq"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:autoSizeTextType="uniform"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/userPostImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/vsm_logo"
                android:scaleType="fitXY"
                android:visibility="gone"></ImageView>


            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:autoPlay="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:enableAutomaticInitialization="true"
                app:showFullScreenButton="true"
                app:showSeekBar="true"
                app:showVideoCurrentTime="true"
                app:showVideoDuration="true"
                app:showYouTubeButton="false"></com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="12dp"
                android:layout_weight="2"
                android:baselineAligned="false">
                <!--            <LinearLayout-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--     -->
                <!--                android:background="#FF23C1B2"-->
                <!--                >-->
                <!--               -->
                <!--                <ImageView-->
                <!--                    android:layout_width="40dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:src="@drawable/tag"-->
                <!--                    android:layout_marginRight="10dp"-->
                <!--                    />-->

                <TextView
                    android:visibility="gone"
                    android:id="@+id/intern"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/uht"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Apply for Intern"
                    android:textColor="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/freelancer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/uht"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Do freelance"
                    android:textColor="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/assistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/uht"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="6dp"
                android:paddingRight="30dp"
                android:paddingBottom="6dp"
                android:text="provide feedback and assistance"
                android:textColor="#808080"

                android:textSize="15sp"
                android:textStyle="bold"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="12dp"


                android:background="#808080" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                         android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/likeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Likes"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        tools:autoSizeTextType="uniform" />
                    <TextView
                        android:id="@+id/number_of_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:lines="1"
                        android:text="20"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        tools:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:lines="1"
                        android:text="Comments"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        tools:autoSizeTextType="uniform" />
                    <TextView
                        android:id="@+id/number_of_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="23"
                        android:textSize="16sp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/attachFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:lines="1"
                        android:text="AttachFile"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        tools:autoSizeTextType="uniform" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/uploadFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:lines="1"
                        android:text="UploadFile"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        tools:autoSizeTextType="uniform" />
                    <TextView
                        android:id="@+id/number_of_files"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="23"
                        android:textSize="16sp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="4dp"


                android:background="#808080" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/addAttatchment"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:background="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:weightSum="7"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/writeComment"
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="44dp"
                    android:hint="Write a Comment ...."
                    android:paddingLeft="14dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"

                    android:background="@drawable/commn"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:gravity="right"

                    android:layout_weight="1.5">


                    <Button
                        android:id="@+id/commentButton"
                        android:layout_marginRight="12dp"
                        android:layout_width="44dp"


                    android:layout_height="44dp"
                    android:background="@drawable/sendbutton"></Button>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>