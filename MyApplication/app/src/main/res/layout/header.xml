<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="0dp"
    android:background="#FF533D78">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your total coins :"
        android:textColor="#EFDF57"
        android:textSize="17sp"

        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/headerCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 "
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your total winnings :"
        android:textSize="17sp"

        android:textColor="#EFDF57"
        tools:ignore="MissingConstraints"></TextView>
        <TextView
            android:id="@+id/headerWinnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 "
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints">
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total cash added :"
        android:textSize="17sp"

        android:textColor="#EFDF57"
        tools:ignore="MissingConstraints">
    </TextView>
        <TextView
            android:id="@+id/headerCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints">
        </TextView>
    </LinearLayout>



</LinearLayout>